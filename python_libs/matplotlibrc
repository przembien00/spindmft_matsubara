# pgf-Backend benutzen
#backend : pgf

# Größe der Zeichenfläche in Zoll
figure.figsize : 4.5, 3.2
#figure.figsize : 4.6332, 2.862

# Serifenfont benutzen
font.family : serif

# Fontgrößen
font.size : 13.2
legend.fontsize : small
xtick.labelsize : 11
ytick.labelsize : 11

# Sonstiges
lines.linewidth : 0.9
lines.markersize: 6
lines.markeredgewidth: 0.6
lines.markerfacecolor: none
axes.grid : True
grid.alpha : 0.5
legend.framealpha : 0.9
figure.autolayout: True
xtick.direction: in
ytick.direction: in
xtick.minor.visible: True
ytick.minor.visible: True

# unsere Fonteinstellungen benutzen
pgf.rcfonts : False

# TeX benutzen
text.usetex : True
